<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/aboutLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/about_gradle_color"
    tools:context="com.hp2m.GaziPlus.About">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"

        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/my_primary"
        android:paddingTop="@dimen/defaultPadding"
        android:theme="@style/Base.Theme.HMKCodeApp"
        />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar"
        android:layout_marginLeft="80dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:src="@drawable/newlogo15" />

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/logo"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="26dp"
        android:layout_toEndOf="@+id/logo"
        android:layout_toRightOf="@+id/logo"
        android:text="HP2M"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
        android:textColor="@color/material_blue_grey_900" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/logo"
        android:layout_marginRight="16dp"
        android:layout_marginTop="40dp"
        android:layout_toEndOf="@+id/twitterName"
        android:layout_toRightOf="@+id/twitterName"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:text="Sadık Tuna Yağcı"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
        android:textColor="@color/material_blue_grey_900"
        android:textSize="21sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView5"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignRight="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:text="Ahmet Kapkiç"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
        android:textColor="@color/material_blue_grey_900"
        android:textSize="21sp" />

    <ImageView
        android:id="@+id/twitterLogo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_below="@+id/divider"
        android:layout_marginTop="16dp"
        android:src="@drawable/twitter_logo" />

    <ImageView
        android:id="@+id/mailLogo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/twitterLogo"
        android:layout_alignStart="@+id/twitterLogo"
        android:layout_below="@+id/twitterLogo"
        android:layout_marginTop="16dp"
        android:src="@drawable/email_icon" />

    <TextView
        android:id="@+id/twitterName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mailLogo"
        android:layout_alignTop="@+id/twitterLogo"
        android:layout_marginLeft="16dp"
        android:layout_toEndOf="@+id/twitterLogo"
        android:layout_toRightOf="@+id/twitterLogo"
        android:gravity="center"
        android:text="GaziPlus"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
        android:textColor="@color/material_blue_grey_900"
        android:textSize="21sp" />

    <TextView
        android:id="@+id/mailAdress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/mailLogo"
        android:layout_alignTop="@+id/mailLogo"
        android:layout_marginLeft="16dp"
        android:layout_toEndOf="@+id/mailLogo"
        android:layout_toRightOf="@+id/mailLogo"
        android:gravity="center"
        android:text="yagcituna@gmail.com"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
        android:textColor="@color/material_blue_grey_900"
        android:textSize="21sp" />

    <TextView
        android:id="@+id/devTeam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/textView5"
        android:layout_marginLeft="16dp"
        android:gravity="center"
        android:text="Geliştirici Ekip:"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
        android:textColor="@color/material_blue_grey_900"
        android:textSize="21sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/divider"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/danisman2"
        android:layout_marginTop="20dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/devTeam"
        android:layout_alignStart="@+id/devTeam"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:text="Danışmanlar:"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
        android:textColor="@color/material_blue_grey_900"
        android:textSize="21sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/danisman1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textView4"
        android:layout_marginRight="16dp"
        android:layout_toEndOf="@+id/devTeam"
        android:layout_toRightOf="@+id/devTeam"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:text="Şeref Sağıroğlu"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
        android:textColor="@color/material_blue_grey_900"
        android:textSize="21sp" />

    <TextView
        android:id="@+id/danisman2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/danisman1"
        android:layout_alignLeft="@+id/danisman1"
        android:layout_alignRight="@+id/danisman1"
        android:layout_alignStart="@+id/danisman1"
        android:layout_below="@+id/danisman1"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:text="Mehmet Demirci"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
        android:textColor="@color/material_blue_grey_900"
        android:textSize="21sp" />

    <TextView
        android:id="@+id/surum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:gravity="right"
        android:text="v0.53 BETA"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
        android:textColor="@color/material_blue_grey_800"
        android:textSize="21sp"
        android:textStyle="italic" />

</RelativeLayout>
