<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notlarBodyLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    android:weightSum="1">


    <LinearLayout
        android:id="@+id/topAndBottomHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/topLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/dersKodu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLength="30"
                android:padding="5dp"
                android:text="BM102"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                android:textColor="#ff000000" />

            <TextView
                android:id="@+id/dersAdi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/dersKodu"
                android:layout_toRightOf="@+id/dersKodu"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="5dp"
                android:text="BİLGİSAYAR PROGRAMLAMA II"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                android:textColor="#ff000000" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/bottomLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/vizeHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Vize"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption" />

            <TextView
                android:id="@+id/vizeNotu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/vizeHeader"
                android:layout_alignStart="@+id/vizeHeader"
                android:layout_below="@+id/vizeHeader"
                android:ellipsize="end"
                android:maxLength="30"
                android:padding="5dp"
                android:text="33"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                android:textColor="#ff000000" />

            <TextView
                android:id="@+id/finalNotu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/vizeNotu"
                android:layout_alignEnd="@+id/finalHeader"
                android:layout_alignLeft="@+id/finalHeader"
                android:layout_alignRight="@+id/finalHeader"
                android:layout_alignStart="@+id/finalHeader"
                android:layout_below="@+id/finalHeader"
                android:layout_gravity="center_horizontal"
                android:ellipsize="end"
                android:maxLength="30"
                android:padding="5dp"
                android:text="44"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                android:textColor="#ff000000" />

            <TextView
                android:id="@+id/butNotu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/vizeNotu"
                android:layout_alignLeft="@+id/butHeader"
                android:layout_alignStart="@+id/butHeader"
                android:layout_below="@+id/butHeader"
                android:ellipsize="end"
                android:maxLength="30"
                android:padding="5dp"
                android:text="55"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                android:textColor="#ff000000" />

            <TextView
                android:id="@+id/finalHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="55dp"
                android:layout_toEndOf="@+id/vizeHeader"
                android:layout_toRightOf="@+id/vizeHeader"
                android:text="Final"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption" />

            <TextView
                android:id="@+id/butHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/finalHeader"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="55dp"
                android:layout_toEndOf="@+id/finalHeader"
                android:layout_toRightOf="@+id/finalHeader"
                android:text="Büt  "
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/butNotu"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/butHeader"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_arrow_right_black_24dp" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

    </LinearLayout>

</LinearLayout>